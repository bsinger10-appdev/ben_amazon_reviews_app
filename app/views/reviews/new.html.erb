<!-- Validation failure messages -->
<% if @review.errors.any? %>
  <% @review.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Review</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_review" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for product_number -->
      <div class="form-group">
        <label for="product_number" class="control-label">
          Product number
        </label>

        <%= select_tag(:product_number, options_from_collection_for_select(Product.all, :id, :amazon_url, @review.product_number), :class => "form-control") %>
      </div>

      <!-- Label and input for review_id -->
      <div class="form-group">
        <label for="review_id" class="control-label">
          Review
        </label>

        <input type="text" id="review_id" name="review_id" placeholder="Review" class="form-control" value="<%= @review.review_id %>">
      </div>

      <!-- Label and input for review_date -->
      <div class="form-group">
        <label for="review_date" class="control-label">
          Review date
        </label>

        <input type="text" id="review_date" name="review_date" placeholder="Review date" class="form-control" value="<%= @review.review_date %>">
      </div>

      <!-- Label and input for review_rating -->
      <div class="form-group">
        <label for="review_rating" class="control-label">
          Review rating
        </label>

        <input type="text" id="review_rating" name="review_rating" placeholder="Review rating" class="form-control" value="<%= @review.review_rating %>">
      </div>

      <!-- Label and input for review_text -->
      <div class="form-group">
        <label for="review_text" class="control-label">
          Review text
        </label>

        <input type="text" id="review_text" name="review_text" placeholder="Review text" class="form-control" value="<%= @review.review_text %>">
      </div>

      <button class="btn btn-success">
        Create Review
      </button>
      or
      <a href="/reviews">Cancel</a>
    </form>
  </div>
</div>
